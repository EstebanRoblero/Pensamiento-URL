#juego ejercicio 8

def adivina_numero(numero_secreto , intento):
    if intento==0:
        print("se acabo cualquier intento")
        return
    num=int(input("HOLA adivina el numero VAMOOS:  "))
    if num==numero_secreto:
        print("BIEN ECHO LO ADIVINASTE")
    else:
        print("Error ese no es el numero intentalo nuevamente")
        adivina_numero(numero_secreto, intento-1)

numero_secreto =2

print("QUE TAL SE BIENVENIDO AL JUEGO DE ADIVINAR EL NUMERO SECRETO PERO SHHH")
print("PUEDES ELEJIR UN NUMERO ENTRE 1 Y 1000, BUENA SUERTE")


adivina_numero(numero_secreto, 2)



    